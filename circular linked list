class Node:
    def __init__(self, data):
        self.data = data
        self.next = None

class CircularLinkedList:
    def __init__(self):
        self.head = None
    def insert(self, data):
        new_node = Node(data)
        if not self.head:
            self.head = new_node
            new_node.next = self.head
        else:
            temp = self.head
            while temp.next != self.head:
                temp = temp.next
            temp.next = new_node
            new_node.next = self.head
        print(f"{data} inserted.")

    def delete(self, key):
        if not self.head:
            print("List is empty.")
            return

        curr = self.head

        if curr.data == key:
            if curr.next == self.head:  
                self.head = None
            else:
                
                temp = self.head
                while temp.next != self.head:
                    temp = temp.next
                temp.next = curr.next
                self.head = curr.next
            print(f"{key} deleted.")
            return

        prev = curr
        curr = curr.next
        while curr != self.head:
            if curr.data == key:
                prev.next = curr.next
                print(f"{key} deleted.")
                return
            prev = curr
            curr = curr.next

        print(f"{key} not found.")

    def search(self, key):
        if not self.head:
            print("List is empty.")
            return
        temp = self.head
        while True:
            if temp.data == key:
                print(f"{key} found in the list.")
                return
            temp = temp.next
            if temp == self.head:
                break
        print(f"{key} not found.")

   
    def display(self):
        if not self.head:
            print("List is empty.")
            return
        temp = self.head
        while True:
            print(temp.data, end=" -> ")
            temp = temp.next
            if temp == self.head:
                break
        print("(head)")


def main():
    cll = CircularLinkedList()
    while True:
        print("\n--- Circular Linked List Menu ---")
        print("1. Insert")
        print("2. Delete")
        print("3. Search")
        print("4. Display")
        print("5. Exit")
        choice = input("Enter your choice (1-5): ")

        if choice == '1':
            data = int(input("Enter value to insert: "))
            cll.insert(data)
        elif choice == '2':
            key = int(input("Enter value to delete: "))
            cll.delete(key)
        elif choice == '3':
            key = int(input("Enter value to search: "))
            cll.search(key)
        elif choice == '4':
            cll.display()
        elif choice == '5':
            print("Exiting program.")
            break
        else:
            print("Invalid choice! Please enter 1-5.")

if __name__ == "__main__":
    main()
